#!/bin/bash

# Check for rustc
printf "Checking for rustc..."
if ! command -v rustc &> /dev/null
then
    echo "not found"
    echo "rustc not found. Please install it to continue."
    exit 1
else
    echo "found"
fi

# Check for make
printf "Checking for make..."
if ! command -v make &> /dev/null
then
    echo "not found"
    echo "make not found. Please install it to continue."
    exit 1
else
    echo "found"
fi

# Check for gpg
printf "Checking for gpg..."
if ! command -v gpg &> /dev/null
then
    echo "not found"
    echo "gpg not found. Please install it to continue."
    exit 1
else
    echo "found"
fi

touch .configured
echo "Configuration complete. Run 'make' to build."